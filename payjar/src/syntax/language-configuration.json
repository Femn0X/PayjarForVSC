{
	"comments": {
		"lineComment": "//",
		"blockComment": ["/*", "*/"]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "`", "close": "`", "notIn": ["string", "comment"] }
	],
	"surroundingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "\"", "close": "\"" },
		{ "open": "'", "close": "'" },
		{ "open": "`", "close": "`" }
	],
	"wordPattern": "(-?\\d*\\.\\d\\w*)|([a-zA-Z_][a-zA-Z0-9_]*)",
	"indentationRules": {
		"increaseIndentPattern": "^.*\\{\\s*$",
		"decreaseIndentPattern": "^\\s*\\}"
	},
	"onEnterRules": [
		{
			"beforeText": "^\\s*\{\\s*$",
			"afterText": "^\\s*\\}",
			"action": { "indentAction": "IndentOutdent" }
		},
		{
			"beforeText": "^.*\\{[^}]*$",
			"action": { "indentAction": "Indent" }
		}
	],
	"folding": {
		"markers": {
			"start": "^\\s*//\\s*#?region\\b",
			"end": "^\\s*//\\s*#?endregion\\b"
		}
	}
}

